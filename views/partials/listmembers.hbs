{{#each members}}
    {{# unless isTrainer}}
    <section class="ui two column segment">
        <column>
            <h2 class="ui header">
                {{firstname}} {{lastname}}
            </h2>
        </column>
        <column>
            <a href="/trainerview/{{id}}" class="ui icon button">
                <i class="icon folder open"></i>
            </a>
            <a href="/trainerdashboard/deletemember/{{id}}" class="ui icon button">
                <i class="icon trash"></i>
            </a>
        </column>
    </section>
    {{/unless}}
{{/each}}